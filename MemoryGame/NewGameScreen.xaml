<Page x:Class="MemoryGame.NewGameScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewGameScreen">

    <Canvas x:Name="Theme">

        <!--Popup-->
        <Grid x:Name="Output" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
            <StackPanel>
                <Button Width="50" Height="50" Canvas.Left="0" Background="Transparent" BorderThickness="0" Margin="10,10"  Click="ShowPopupOffsetClicked">
                    <Image Source="Res/Palette.png"></Image>
                </Button>
            </StackPanel>
            <Popup x:Name="StandardPopup" PopupAnimation="Fade" AllowsTransparency="True">
                <Border Background="Aqua" BorderThickness="2" Width="350" Height="210">
                    <StackPanel Width="350" Height="210">
                        <TextBlock  Text="Thema's" FontSize="24.667" HorizontalAlignment="Center"/>
                        <!--Thema input-->
                        <ComboBox Loaded="ComboBox_Loaded" Width="200" x:Name="themeInput" Margin="0,10,0,0">
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="100">Thema_1</TextBlock>
                                    <Image Source="Res\Theme Logo's\1.png" Height="30"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="100">Thema_2</TextBlock>
                                    <Image Source="Res\Theme Logo's\2.png" Height="30"/>
                                </StackPanel>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="100">Thema_3</TextBlock>
                                    <Image Source="Res\Theme Logo's\3.png" Height="30"/>
                                </StackPanel>
                            </ComboBoxItem>
                        </ComboBox>
                        <Button Margin="0,100,10.4,10" Content="Close" Click="ClosePopupClicked" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
    </Canvas>
</Page>

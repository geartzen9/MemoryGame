<Page x:Class="MemoryGame.HighscoresScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoryGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HighscoresScreen" Margin="-1,0,0,0">
    <Canvas Background="White" x:Name="parentCanvas">
        <Grid Width="{Binding ActualWidth, ElementName=parentCanvas}" Height="{Binding ActualHeight, ElementName=parentCanvas}">
            <TextBlock Width="400" Height="50" TextAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Showcard Gothic" FontSize="36">
                Highscores
            </TextBlock>
            <Button Margin="25,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="25" Click="Back_Button_Click">
                Terug
            </Button>
            <Border Margin="20,90,20,20" BorderThickness="1" BorderBrush="Black">
                <Grid Margin="20,90,20,20" x:Name="scoreGrid">

                </Grid>
            </Border>
        </Grid>
    </Canvas>

</Page>
